@model SoftwareAssetFormModel

@{
    ViewData["Title"] = "Edit Software Asset";
}

<h1 class="display-4">Edit Software</h1>

<p>Manufacturer</p>
<p class="fs-5">@Model.ManufacturerName</p>

<p>License Type</p>
<p class="fs-5">@Model.LicenseName</p>

<form asp-controller="SoftwareAsset" asp-action="Edit" asp-route-assetId="@Model.SoftwareAssetId" method="post" class="col-md-6">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ManufacturerId) 
    @Html.HiddenFor(m => m.LicenseTypeId)
    @Html.HiddenFor(m => m.ManufacturerName)
    @Html.HiddenFor(m => m.LicenseName)
    <div class="mb-3">
        <label asp-for="LicenseKey" class="form-label"></label>
        <input asp-for="LicenseKey" class="form-control">
        <span asp-validation-for="LicenseKey" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NumberOfLicenses" class="form-label"></label>
        <input asp-for="NumberOfLicenses" class="form-control">
        <span asp-validation-for="NumberOfLicenses" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Version" class="form-label"></label>
        <input asp-for="Version" class="form-control">
        <span asp-validation-for="Version" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ExpirationDate" class="form-label"></label>
        <input asp-for="ExpirationDate" class="form-control">
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AssetStatusId" class="form-label"></label>
        <select asp-for="AssetStatusId" asp-items="@Model.AssetStatuses" class="form-select"></select>
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>
    <div class="d-flex gap-3 align-items-center mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Details" asp-route-assetId="@Model.SoftwareAssetId">Go Back</a>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>