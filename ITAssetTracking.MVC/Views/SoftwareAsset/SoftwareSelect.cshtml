@model SoftwareSelectModel

@{
    ViewData["Title"] = "Select Softwarer";
}

<div class="d-flex gap-3 align-items-end mb-3">
    <h1 class="display-4">Select Software</h1>
    <a onclick="history.back()" class="link-primary">Go Back</a>
</div>
<div class="mb-2 mt-3">
    <form asp-controller="SoftwareAsset" asp-action="SoftwareSelect" method="get" class="d-flex gap-3 col-md-3">
        <input asp-for="Search" class="form-control">
        <button class="btn btn-primary">Search</button>
    </form>
</div>
@if (Model.Manufacturers.Count == 0)
{
    <h5 class="display-6">No Results</h5>
}
else
{
    <div class="col-md-3">
        <table class="table table-bordered">
            @foreach (var m in Model.Manufacturers)
            {
                <thead>
                <tr>
                    <th colspan="2">@m.ManufacturerName</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var l in m.LicenseTypes)
                {
                    <tr>
                        <td>@l.LicenseTypeName</td>
                        <td><a asp-action="Add" asp-route-licenseTypeId="@l.LicenseTypeID">Select</a></td>
                    </tr>
                }
                </tbody>
            }
        </table>
    </div>
}