@model AssetValueReportModel

@{
    ViewData["Title"] = "Hardware Asset Value";
}

<form asp-action="HardwareValue" method="get" class="card p-3 d-flex flex-column flex-md-row gap-4 mb-3 align-items-center">
    <div class="d-flex gap-2 align-items-center">
        <label asp-for="FromDate" class="form-label"></label>
        <input asp-for="FromDate" class="form-control">
    </div>
    <div class="d-flex gap-2 align-items-center">
        <label asp-for="ToDate" class="form-label"></label>
        <input asp-for="ToDate" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Apply</button>
</form>
<table class="table table-bordered table-primary">
    <thead>
    <tr>
        <th>Total Asset Value</th>
        <th>$@Model.AssetValuesReport.TotalValue</th>
    </tr>
    </thead>
</table>
@if (Model.AssetValuesReport.Items == null || Model.AssetValuesReport.Items.Count == 0)
{
    <p class="lead">No Reports found</p>
}
else
{
    <table class="table table-bordered">
        <thead>
        <tr class="table-primary">
            <th>Asset Type</th>
            <th>Number of Assets</th>
            <th>Value</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var r in Model.AssetValuesReport.Items)
        {
            <tr>
                <td>@r.AssetTypeName</td>
                <td>@r.NumberOfAssets</td>
                <td>$@r.AssetsValue</td>
            </tr>
        }
        </tbody>
    </table>
} 
